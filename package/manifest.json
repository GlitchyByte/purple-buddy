{
    "name": "Purple Buddy",
    "description": "Auto-collects channel points and auto-plays when errors popup on the video player.",
    "version": "1.1",
    "author": "GlitchyByte",
    "manifest_version": 3,
    "icons": {
        "16": "/images/icon16.png",
        "32": "/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [ "activeTab", "scripting" ],
    "host_permissions": [ "https://twitch.tv/*" ],
    "action": {
        "default_title": "Purple Buddy"
    }
}
