{
    "manifest_version": 3,
    "name": "Purple Buddy",
    "version": "1.1.1",
    "description": "Auto-collects channel points on Twitch, and auto-plays when errors popup and interrupt the video.",
    "author": "GlitchyByte",
    "icons": {
        "16": "/images/icon16.png",
        "32": "/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [ "activeTab", "scripting" ],
    "host_permissions": [ "https://twitch.tv/*" ],
    "action": {
        "default_title": "Purple Buddy"
    }
}
